<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp"
    android:layout_gravity="center"
    android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvImgCard"
                android:clickable="true"
                app:cardElevation="0dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/black"
            />

        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvLoginAcc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ရောင်းချနေသောစာရင်းမှ ဖယ်ရှားရန် သေချာပါသလား?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvImgCard" />

            <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDo"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="လုပ်မည်"
            app:cornerRadius="10dp"
                android:stateListAnimator="@null"
            android:backgroundTint="#FF4D4D"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLoginAcc"/>

            <TextView
                android:id="@+id/tvCancel"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="မလုပ်တော့ပါ"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btnDo"
                app:layout_constraintLeft_toLeftOf="@id/btnDo"
                app:layout_constraintRight_toRightOf="@id/btnDo"/>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/btnCancel"-->
<!--                android:layout_width="250dp"-->
<!--                android:layout_height="55dp"-->
<!--                android:text="မလုပ်တော့ပါ"-->
<!--                android:textColor="@color/black"-->
<!--                app:cornerRadius="10dp"-->
<!--                android:shadowColor="@null"-->
<!--                android:layout_marginTop="5dp"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/btnDo"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>