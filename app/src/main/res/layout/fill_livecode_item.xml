<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProductImage"
        android:src="@drawable/image_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvProductName"
        android:text="D Product"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ivProductImage"
        app:layout_constraintTop_toTopOf="@id/ivProductImage"/>

    <TextView
        android:id="@id/tvProductPrice"
        android:text="20,000 Ks"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toRightOf="@id/ivProductImage"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        app:layout_constraintBottom_toBottomOf="@id/ivProductImage"/>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Live Code"
        app:hintTextColor="@color/gray"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:boxStrokeColor="@color/original_blue"
        app:boxStrokeWidth="1dp"
        android:padding="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivProductImage"
        app:layout_constraintBottom_toBottomOf="@id/ivProductImage">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="text"
            android:id="@+id/etLivecode"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>