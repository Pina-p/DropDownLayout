<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvProductName"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purple fruit"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/ivProductImage"
        app:layout_constraintLeft_toRightOf="@id/ivProductImage"/>

    <TextView
        android:id="@+id/tvProductModel"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AH87"
        android:textColor="#0000FF"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        app:layout_constraintLeft_toRightOf="@id/ivProductImage"/>

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150,000 Ks"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivProductImage"
        app:layout_constraintTop_toBottomOf="@id/tvProductModel"
        app:layout_constraintLeft_toRightOf="@id/ivProductImage"/>

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/threedot"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivProductImage"
        app:layout_constraintBottom_toBottomOf="@id/ivProductImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>