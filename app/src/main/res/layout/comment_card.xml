<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="250dp"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nta"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/cbChooseAll"
        android:layout_width="24dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvImage"
        app:layout_constraintBottom_toBottomOf="@id/cvImage"
        android:button="@null"
        android:background="@drawable/checkbox_select_unselect"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="24dp"/>

    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toRightOf="@id/cvImage"
        app:layout_constraintTop_toTopOf="@id/cvImage"
        app:layout_constraintBottom_toBottomOf="@id/cvImage"
        app:layout_constraintRight_toLeftOf="@id/cbChooseAll"
        app:cardCornerRadius="7dp"
        android:layout_width="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/tvBuyerName"
                android:text="Robert Tin Nyut"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvCommentTime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvBuyerName"
                android:layout_marginEnd="15dp"
                android:text="6 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvComment"
                app:layout_constraintLeft_toLeftOf="@id/tvBuyerName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBuyerName"
                android:layout_marginEnd="15dp"
                android:text="@string/vs78"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>