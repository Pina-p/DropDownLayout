<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvLiveSaleImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="70dp"
        android:layout_height="90dp"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivLiveSaleImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/purple_200"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/facebooklogo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvTime"
        app:layout_constraintLeft_toRightOf="@id/cvLiveSaleImg"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5 min ago"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCaption"
        app:layout_constraintLeft_toLeftOf="@id/tvTime"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        android:text="Sample Live Caption Here !!!"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/tvCaption"
        app:layout_constraintLeft_toLeftOf="@id/tvCaption"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/vDot"
            android:layout_width="7dp"
            android:backgroundTint="@color/back_color"
            android:background="@drawable/circle_background"
            android:layout_height="7dp"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tvOrderItem"
            android:text="20"
            android:layout_marginLeft="10dp"
            android:textColor="@color/back_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvOrderText"
            android:text="Orders"
            android:layout_marginLeft="5dp"
            android:textColor="@color/back_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/vDot1"
            android:layout_width="7dp"
            android:backgroundTint="#929292"
            android:background="@drawable/circle_background"
            android:layout_marginLeft="10dp"
            android:layout_height="7dp"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tvCommentCount"
            android:text="1.2k"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCommentText"
            android:text="Comments"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>